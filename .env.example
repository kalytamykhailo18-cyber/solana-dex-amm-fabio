# ============================================
# SOLANA DEX MVP - CENTRALIZED CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# All project parameters are controlled from this single file

# ==============================================
# NETWORK CONFIGURATION
# ==============================================

# Solana network to use
# Options: devnet, testnet, mainnet-beta
SOLANA_NETWORK=devnet

# RPC endpoint URL
# Devnet: https://api.devnet.solana.com
# Mainnet: https://api.mainnet-beta.solana.com
# Or use a premium RPC like Helius, QuickNode, etc.
SOLANA_RPC_URL=https://api.devnet.solana.com

# WebSocket URL for real-time updates
SOLANA_WEBSOCKET_URL=wss://api.devnet.solana.com

# ==============================================
# WALLET / DEPLOYER CONFIGURATION
# ==============================================

# Path to the deployer wallet keypair file
# This wallet will pay for deployment and initial pool creation
DEPLOYER_KEYPAIR_PATH=~/.config/solana/devnet.json

# ==============================================
# PROGRAM CONFIGURATION
# ==============================================

# DEX Program ID (will be populated after first deployment)
# Leave empty for initial build, then update after `anchor build`
PROGRAM_ID=

# Program version for tracking
PROGRAM_VERSION=0.1.0

# ==============================================
# DEX PARAMETERS
# ==============================================

# Default swap fee in basis points (100 = 1%, 30 = 0.3%)
DEFAULT_SWAP_FEE_BPS=30

# Percentage of fees going to liquidity providers (0-100)
LP_FEE_SHARE_PERCENT=100

# Minimum liquidity required to initialize a pool (in base units)
# This prevents dust attacks and ensures pools have meaningful liquidity
MIN_LIQUIDITY=1000

# Maximum allowed fee rate in basis points (1000 = 10%)
MAX_FEE_BPS=1000

# ==============================================
# TOKEN CONFIGURATION (Optional)
# ==============================================

# Base token mint address (leave empty to create new on deployment)
BASE_TOKEN_MINT=

# Base token decimals (9 is Solana standard, like SOL)
BASE_TOKEN_DECIMALS=9

# Base token name (for display purposes)
BASE_TOKEN_NAME=MyToken

# Base token symbol
BASE_TOKEN_SYMBOL=MTK

# ==============================================
# FRONTEND CONFIGURATION (VITE)
# ==============================================
# These variables are exposed to the frontend
# Must be prefixed with VITE_ to be accessible in React

# Network for frontend
VITE_SOLANA_NETWORK=devnet

# RPC URL for frontend connections
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com

# Program ID for frontend (same as PROGRAM_ID)
VITE_PROGRAM_ID=

# Application name shown in UI
VITE_APP_NAME=SolDEX

# Application description
VITE_APP_DESCRIPTION=Simple Solana DEX

# ==============================================
# TRADING PARAMETERS
# ==============================================

# Default slippage tolerance in basis points (100 = 1%)
DEFAULT_SLIPPAGE_BPS=100

# Maximum allowed slippage in basis points (1000 = 10%)
MAX_SLIPPAGE_BPS=1000

# ==============================================
# JUPITER INTEGRATION
# ==============================================

# Enable Jupiter integration (true/false)
# Set to true when Jupiter integration is ready
JUPITER_ENABLED=false

# Jupiter Quote API endpoint
JUPITER_API_URL=https://quote-api.jup.ag/v6

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Frontend URL after deployment (for CORS and reference)
FRONTEND_URL=

# Priority fee in lamports for faster transactions (optional)
# Higher values = faster confirmation but more expensive
# 1000 = 0.000001 SOL
PRIORITY_FEE_LAMPORTS=1000

# Compute unit limit for complex transactions
COMPUTE_UNIT_LIMIT=200000

# ==============================================
# DEVELOPMENT / DEBUG
# ==============================================

# Enable verbose logging (true/false)
DEBUG_MODE=false

# Skip preflight checks for faster development (true/false)
# WARNING: Only use in development!
SKIP_PREFLIGHT=false

# Confirmation commitment level
# Options: processed, confirmed, finalized
COMMITMENT=confirmed

# ==============================================
# HOSTING CONFIGURATION
# ==============================================

# Static hosting provider (vercel, netlify, cloudflare)
HOSTING_PROVIDER=vercel

# Custom domain (optional)
CUSTOM_DOMAIN=

# ==============================================
# INITIAL POOL CONFIGURATION
# ==============================================

# Token A mint for first pool (leave empty to use BASE_TOKEN_MINT)
INITIAL_POOL_TOKEN_A=

# Token B mint for first pool (e.g., USDC, SOL wrapped)
INITIAL_POOL_TOKEN_B=

# Initial liquidity for Token A (in base units with decimals)
INITIAL_LIQUIDITY_A=1000000000

# Initial liquidity for Token B (in base units with decimals)
INITIAL_LIQUIDITY_B=1000000000

# Fee rate for initial pool in basis points
INITIAL_POOL_FEE_BPS=30


