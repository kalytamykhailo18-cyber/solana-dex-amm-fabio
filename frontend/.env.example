# ==============================================
# TRADING PARAMETERS
# ==============================================

# Default Slippage Tolerance (Basis Points)
# Description: Default slippage tolerance for swaps
# Purpose: Protect users from price changes during transaction
# Unit: Basis points (100 = 1%)
# Common values:
#   - 50 (0.5%): Low slippage, stable pairs
#   - 100 (1%): Standard, most pairs
#   - 500 (5%): High slippage, volatile pairs
# Default: 100 (1%)
# User can change in UI
VITE_DEFAULT_SLIPPAGE_BPS=100

# Maximum Slippage Tolerance (Basis Points)
# Description: Maximum slippage users can set
# Purpose: Prevent users from setting dangerously high slippage
# Unit: Basis points
# Default: 5000 (50%)
# Recommendation: 1000 (10%) for most DEXs
VITE_MAX_SLIPPAGE_BPS=5000

# Minimum Slippage Tolerance (Basis Points)
# Description: Minimum slippage users can set
# Purpose: Prevent failed transactions from too low slippage
# Unit: Basis points
# Default: 10 (0.1%)
VITE_MIN_SLIPPAGE_BPS=10

# Default Transaction Deadline (Seconds)
# Description: Time before transaction expires
# Purpose: Prevent transactions from executing too late
# Unit: Seconds
# Default: 1200 (20 minutes)
# Range: 60-3600 (1 minute to 1 hour)
VITE_DEFAULT_DEADLINE_SECONDS=1200

# Refresh Interval (Milliseconds)
# Description: How often to refresh pool data and balances
# Purpose: Keep UI data current
# Unit: Milliseconds
# Recommended: 10000-30000 (10-30 seconds)
# Default: 15000 (15 seconds)
# Lower = more current but more RPC calls
VITE_REFRESH_INTERVAL_MS=15000

